<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resume_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/resume_title"
        android:layout_width="@dimen/resume_item_title_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resume_item_common_margin"
        android:layout_marginRight="@dimen/resume_item_common_margin"
        android:textSize="@dimen/resume_title_text_size"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/resume_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/resume_item_common_margin"
        android:layout_toRightOf="@id/resume_title"
        android:background="@null"
        android:cursorVisible="true"
        android:padding="3dp"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        />

    <ImageView
        android:id="@+id/resume_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/resume_content"
        android:visibility="gone"
        android:src="@drawable/ico_resume_check"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/resume_content"
        android:layout_toRightOf="@id/resume_title"
        android:background="@color/black_000000"
        />

</RelativeLayout>