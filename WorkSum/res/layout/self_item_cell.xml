<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/self_common_margin"
        android:layout_marginTop="@dimen/self_common_margin"
        android:layout_marginBottom="@dimen/self_common_margin"
        android:layout_toRightOf="@id/item_icon"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="@dimen/self_common_margin"
            android:id="@+id/self_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_item_title"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginLeft="@dimen/self_common_margin"
            android:id="@+id/self_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_item_description"/>

    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_marginBottom="-5dp"
        android:layout_marginRight="20dp"
        android:layout_height="1px"
        android:layout_toRightOf="@id/item_icon"
        android:layout_alignBottom="@id/item_icon"
        android:background="@color/black_000000"/>



</RelativeLayout>