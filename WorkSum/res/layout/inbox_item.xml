<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/white_ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/inbox_item_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/inbox_item_title"
        android:textColor="@color/white_7f7f7f"
        android:textSize="14sp"
        android:layout_toRightOf="@id/inbox_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/inbox_item_description"
        android:textColor="@color/white_7f7f7f"
        android:textSize="12sp"
        android:layout_below="@id/inbox_item_title"
        android:layout_toRightOf="@id/inbox_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>