<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/job_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/joblist_cell_detail_bg">

        <include
            layout="@layout/joblist_cell_texts_for_large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/job_pic"
        android:layout_alignRight="@id/job_pic"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/job_salary_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eecc2266"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:visibility="gone"
            android:textColor="@color/white_ffffff"
            android:textSize="12sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eecc2266"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:visibility="visible"
            android:text="@string/joblist_recommend_tag"
            android:textColor="@color/white_ffffff"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/job_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="#aa000000"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textColor="@color/white_ffffff"
            android:textSize="12sp"
            />
    </LinearLayout>



</RelativeLayout>