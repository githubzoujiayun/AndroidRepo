<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@drawable/bg_background"
              android:padding="30dp">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/login_dialog_title"
        android:textSize="24sp"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/login_dialog_login_btn"
        android:layout_below="@id/login_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_with_phone"
        android:textColor="@drawable/login_dialog_text_color"
        android:background="@drawable/bg_drawable_blue_3c5a96"/>

    <Button
        android:id="@+id/login_dialog_register_btn"
        android:layout_below="@id/login_dialog_login_btn"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_with_phone"
        android:textColor="@drawable/login_dialog_text_color"
        android:background="@drawable/bg_drawable_red_ed1055"/>

    <ImageView
        android:id="@+id/login_dialog_close_btn"
        android:src="@drawable/editor_close"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/login_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>