<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="radio_button_common_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/filter_common_text_size</item>
        <item name="android:textColor">@drawable/sort_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="radio_button_red_ef1d19_style" parent="radio_button_common_style">
        <item name="android:textColor">@drawable/sort_text_color</item>
        <item name="android:background">@drawable/shape_corner_common_ef1d19</item>
    </style>

    <style name="radio_button_green_008d14_style" parent="radio_button_common_style">
        <item name="android:textColor">@drawable/filter_green_color_selector</item>
        <item name="android:background">@drawable/shape_corner_common_008d14</item>
    </style>

</resources>
