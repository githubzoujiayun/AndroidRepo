<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/orange_f99a54"/>
            <stroke
                android:width="10dp"
                android:color="@color/orange_f99a54"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/orange_f99a54"/>
            <stroke
                android:width="1dp"
                android:color="@color/orange_f99a54"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/orange_f99a54"/>
            <stroke
                android:width="1dp"
                android:color="@color/orange_f99a54"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/gray_d4d4d4"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray_d4d4d4"/>
        </shape>
    </item>
</selector>


