<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="5dp"
              android:id="@+id/joblist_headview"
              android:visibility="gone"
              android:background="@color/gray_e5e5e5"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="4dp"
        android:id="@+id/joblist_headview_keywords"
        android:text="@string/joblist_search_keywords"
        android:textColor="@color/gray_aaaaaa"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toRightOf="@id/joblist_headview_keywords"
        android:layout_marginLeft="10dp"
        android:id="@+id/joblist_headview_industry"
        android:textColor="@color/gray_aaaaaa"
        android:text="@string/joblist_search_industry"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/joblist_headview_close"
        android:padding="8dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/editor_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>