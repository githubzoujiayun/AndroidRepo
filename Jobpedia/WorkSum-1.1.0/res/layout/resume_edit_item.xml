<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resume_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="6dp"
    android:background="@color/white_ffffff"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/resume_title"
        android:layout_width="@dimen/resume_item_title_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resume_item_common_margin"
        android:layout_marginRight="@dimen/resume_item_common_margin"
        android:paddingBottom="2dp"
        android:paddingTop="8dp"
        android:textSize="@dimen/resume_title_text_size"/>

    <EditText
        android:id="@+id/resume_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/resume_title"
        android:layout_alignTop="@id/resume_title"
        android:layout_marginRight="@dimen/resume_item_common_margin"
        android:layout_toRightOf="@id/resume_title"
        android:background="@null"
        android:cursorVisible="true"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="@color/gray_aaaaaa"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/resume_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/resume_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_resume_check"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/resume_content"
        android:layout_toRightOf="@id/resume_title"
        android:background="@color/gray_e6e6e6"
        />

</RelativeLayout>